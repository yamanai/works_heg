@import '~assets/less/theme.less';
.header{
  background:#f7f7f9;
  .title{
    font-size:0.768rem;
    color:#333;
  }
}
div{
  box-sizing: border-box;
}
.content{
  margin-top:2rem;
  background-color: #fff;
}
.pwdWrapper{
  font-size: 0.64rem;
  margin-bottom: 0.64rem;
  .title{
    width:100%;
    height: 1.7rem;
    
    padding: 0 0.64rem;
    margin-bottom: 0.64rem;
    font-weight: bold;
    border-top:thin solid @gray-light;
    border-bottom: thin solid @gray-light;
  }
  .changeForm{
    padding: 0 1.36rem;

    .formgroup{
      border: thin solid @gray-light;
      margin-bottom: .64rem;
      border-radius: 4px; 
      height:1.28rem;
      display: flex;
      align-items:center;
      &.error{
        border-color: @danger-color;
      }
    }
    input{
      text-align: center;
      width:100%;
      padding:0 0.64rem;
    }
    .btnBox{
      justify-content:flex-end;
    }
    a.signpwd{
      display: block;
      width: 3.4rem;
      height: 1.24rem;
      background-color: @warning-color;
      color:#fff;
      border-radius: 4px;
      line-height: 1.24rem;
    }
  }
}