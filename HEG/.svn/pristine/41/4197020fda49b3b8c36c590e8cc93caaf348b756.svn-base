.wrapper{
  font-family:"PingFangSC";
}
.header{
      background-color:#f7f7f9;
      border-bottom:1px solid #ccc;
      .title{
          color:#333;
          font-size:0.769rem;
      }
  }
.section1{
  padding:2.4rem 0.68rem 0;
  background-color:#0b9d78;
  h2{
    font-size:0.68rem;
    color:#fefeff;
    line-height:1rem;
  }
  p{
    font-size:0.6rem;
    color:#ddd;
  }
  .price1{
    padding:0.8rem 0;
    border-bottom:1px solid #73bdae;
  }
  .price2{
    .silver,.gold{
      padding:0.8rem 0 3rem;
      width:50%;
    }
  }
  .br{
    border-right:1px solid #73bdae;
  }
}
.section2{
  background-color:#fff;
  margin:0 0.68rem;
  border-radius:0.2rem;
  .content{
    text-align:left;
    padding:1.4rem 0.4rem 1rem;
    p{
      font-size:0.52rem;
      color:#999;
      text-align:left;
      line-height:0.769rem;
    }
    a{
      text-decoration:underline;
      font-size:0.52rem;
    }
    .btn{
      padding-top:1rem;
      a{
        display:block;
        width:30%;
        padding:0.3rem 0;
        border:1px solid #ffa234;
        text-align:center;
        text-decoration:none;
        border-radius:0.2rem;
      }
    }
  }
  .aside{
    position:absolute;
    width:100%;
    top:-1rem;
    h2{
      font-size:0.68rem;
      color:#999;
      height:1.92rem;
      line-height:1.92rem;
      border-radius:1rem;
      padding:0 0.8rem;
      background-color:#fff;
      box-shadow:0 2px 5px #ccc;
      .price{
        color:#ff0000;
      }
      .date{
        color:#666;
      }
    }

  }
}
.section3{
  margin:0 0.68rem;
  padding:0.4rem;
  border-radius:0.2rem;
  background-color:#fff;
  h2{
    font-size:0.68rem;
    padding:0.28rem 0 0.68rem;
  }
  .silver,.gold{
    border-top:1px solid #ccc;
    text-align:left;
    padding-bottom:0.4rem;
    h3{
      text-align:left;
      font-size:0.6rem;
      color:#666;
      font-weight:normal;
      padding:0.4rem 0;
    }
    p{
      text-align:left;
      font-size:0.52rem;
      line-height:0.769rem;
      color:#999;
    }
    a{
      width:3.4rem;
      padding-right:0.4rem;
      font-size:0.52rem;
      display:block;
      background:url('../../assets/images/wallet/HappyWallet_03.png') right center no-repeat;
      background-size:0.52rem;
    }
  }
}
.section4{
  margin:0.4rem 0.68rem;
  padding:0.4rem;
  background-color:#fff;
  border-radius:0.2rem;
  .selec{
    background-color:#0b9d78;
    color:#fff!important;
  }
  .btn{
    width: 10.68rem; 
    height: 1.276rem; 
    border: 1px solid #0b9d78;
    border-radius: 2px;
    margin:0 auto;
    a{
      width: 50%;
      height: 100%;
      font-size: 0.52rem; 
      color: #333;
      line-height: 1.276rem;
      text-align: center;
      display: block;
    }
  }
  .detail{
    padding-top:1rem;
    ul{
      display: flex;
      // justify-content: space-between;
      border-bottom:1px solid #ccc;
      &>li{
        justify-content: center;
        font-size:0.6rem;
        color:#999;
        height:1.6rem;
        line-height:1.6rem;
        width:25%;
      }
    }
    
  }
}