<template>
	<div class="wrapper">
		<head-top class="header">
			<i slot="left" class="ico iconfont icon-back" @click="$router.push('/')"></i>
			<div slot="title" class="head-title">sign up</div>
			<i slot="right" class="sp iconfont icon-back"></i>
		</head-top>
		<div class="container">
			<div class="form-list">
				<div class="form-group">
					<input type="text" v-model="firstname" placeholder="First name">
				</div>
				<div class="form-group">
					<input type="text" v-model="lastname" placeholder="Last name">
				</div>
				<div class="form-group">
					<input type="text" v-model="email" placeholder="E-mail address">
				</div>
				<div class="form-group">
					<input type="text" v-model="mobile" placeholder="Mobile Number">
				</div>
				<div class="form-group">
					<input type="password" v-model="password" placeholder="Password">
				</div>
				<div class="form-group">
					<input type="password" v-model="repassword" placeholder="Confirm Password">
				</div>
				<div class="statement clear">
					<span class="selected" :class="{choose:isSelec}" @click="isSelec=!isSelec"></span>
					<p>By signing up,you agree to Happy easy go's
						<span @click="$router.push('/agreement')">terms &amp; conditions</span>
					</p>
				</div>
				<div class="register">
					<a class="reg" @click="validate">Register</a>
				</div>
			</div>
		</div>
	</div>
</template>
<script>
import headTop from '../../components/head/head.vue'
import { Toast, Indicator } from 'mint-ui';
import { Register } from '../../models/user/Register.js'
import { User } from '../../models/user/User.js'
export default {
	components: {
		headTop
	},
	data() {
		return {
			isSelec: true,
			firstname: '',
			lastname: '',
			email: '',
			mobile: '',
			password: '',
			repassword: ''
		}
	},
	methods: {
		validate() {
			if (this.firstname.trim() == "") {
				Toast({
					message: 'please enter first name',
					duration: 1000
				});
			} else if (this.lastname.trim() == "") {
				Toast({
					message: 'please enter last name',
					duration: 1000
				});
			} else if (this.email.trim() == "" || !/@/g.test(this.email)) {
				Toast({
					message: 'Please enter correct Email Adress',
					duration: 1000
				});
			} else if (this.mobile.trim() == "" || !/\d/g.test(this.mobile)) {
				Toast({
					message: 'Please enter correct Phone number',
					duration: 1000
				});
			} else if (this.password.trim() == "") {
				Toast({
					message: 'Plaese enter password',
					duration: 1000
				});
			} else if (this.repassword.trim() == "" || this.repassword != this.password) {
				Toast({
					message: 'Two passwords are inconsistent',
					duration: 1000
				});
			} else if (!this.isSelec) {
				Toast({
					message: 'Please agree to the terms',
					duration: 1000
				});
			} else {
				Indicator.open({
					spinnerType: 'fading-circle'
				});
				let register = new Register(this.firstname, this.lastname, this.email, this.mobile, this.password);
				register.register(this).then((res) => {
					res.json().then((jsonObj) => {
						if (jsonObj.success) {
							Indicator.close();
							Toast({
								message: 'registration success,please verify your email',
								duration: 3000
							});
							this.$router.push("/");
						} else {
							Indicator.close();
							Toast(jsonObj.msg)
						}
					}).catch((err) => {
						Indicator.close();
						console.log(err)
					});

				}).catch((err) => {
					Indicator.close();
					console.log(err)
					Toast({
						message: 'network anomaly',
						duration: 1000
					});
				});
			}
		}
	}
}
</script>
<style lang='less' scoped>
.header {
	background: #0b9d78;
	.head-title {
		font-size: 0.768rem!important;
		line-height: 2.04rem;
		color: #fff;
	}
	.sp {
		opacity: 0;
	}
}

.container {
	padding: 0 0.68rem;
	overflow: auto;
	.form-list {
		padding-top: 2.68rem;
		.form-group {
			width: 100%;
			border: 1px solid #ddd;
			margin-bottom: 0.64rem;
			box-sizing: border-box;
			border-radius: 4px;
			input {
				box-sizing: border-box;
				width: 100%;
				padding: 0.44rem;
				font-size: 0.64rem;
			}
		}
		.register {
			margin-top: 2rem;
			a {
				width: 100%;
				background-color: #ffad3d;
				height: 1.8rem;
				font-size: 0.768rem;
				color: #fff;
				line-height: 1.8rem;
				display: block;
				border-radius: 4px;
			}
		}
		.statement {
			text-align: left;
			.selected {
				float: left;
				width: 0.68rem;
				height: 0.68rem;
				background: url('../../assets/images/common/select-gray.png') center no-repeat;
				background-size: 0.68rem;
				margin-top: 0.05rem;
			}
			.choose {
				background: url('../../assets/images/common/select-green.png') center no-repeat;
				background-size: 0.68rem; // border-color: #f56600!important;
			}
			p {
				color: #999;
				font-size: 0.6rem;
				margin-left: 1rem;
				line-height: 0.8rem;
				span {
					color: #0db88f;
				}
			}
		}
	}
}
</style>