			span:nth-of-type(1) {
				display: block;
				font-size: 0.6rem;
				color: #999;
				padding-bottom: 0.1rem;
			}
			span:nth-of-type(2) {
				display: block;
				font-size: 0.68rem;
				color: #000;
				padding-top: 0.1rem;
			}
		}
